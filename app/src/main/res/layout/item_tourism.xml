<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagen a la izquierda -->
        <ImageView
            android:id="@+id/tourismImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/tourism_image"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <!-- Columna con nombre y descripción a la derecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Nombre del lugar turístico -->
            <TextView
                android:id="@+id/tourismName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="My favorite tourism place" />

            <!-- Descripción del lugar turístico -->
            <TextView
                android:id="@+id/tourismDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:text="My favorite tourism place my favorite tourism place my favorite tourism place my favorite tourism place" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>